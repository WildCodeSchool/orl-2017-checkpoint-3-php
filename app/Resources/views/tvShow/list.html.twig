{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Tv Show list</h1>
        <div class="row">
            <a href="{{ path('add_tvshow') }}" class="btn btn-primary">Add tv show</a>
        </div>

        <div class="row">
            {% for tvShow in tvShows %}
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    <div class="thumbnail">
                        <img src="{{ tvShow.url }}" alt="{{ tvShow.name }}">
                        <div class="caption">
                            <h3>
                                <a href="{{ path('show_tvshow', {'id':tvShow.id }) }}">{{ tvShow.name }}</a>
                            </h3>
                            <p>
                                {{ tvShow.year }} - {{ tvShow.type }}
                            </p>
                            <p>
                                <a href="{{ path('edit_tvshow', {'id':tvShow.id }) }}" class="btn btn-info">Edit</a>
                                <form method="POST" action="{{ path('delete_tvshow', {'id':tvShow.id }) }}">
                                    <input type="submit" class="btn btn-danger" value="Delete"/>
                                </form>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}