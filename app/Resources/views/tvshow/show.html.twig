{% extends 'base.html.twig' %}

{% block body %}
    <h1>TV SHOW</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tvshow.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tvshow.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tvshow.type }}</td>
            </tr>
            <tr>
                <th>url</th>
                <td>{{ tvshow.url }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ tvshow.year }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tvshow_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tvshow_edit', { 'id': tvshow.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
