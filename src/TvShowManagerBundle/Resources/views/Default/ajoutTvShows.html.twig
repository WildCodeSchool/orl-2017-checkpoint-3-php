{% extends '::base.html.twig' %}

{% block headtitle %} Ajouter un TV Show {% endblock %}

{% block body %}

<div class="row">

    <div class="col-xs-12 col-md-offset-3 col-md-6">

        <h1 class="text-center">Ajouter un TV Show</h1>

        {% form_theme form 'bootstrap_3_layout.html.twig' %}

        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.type) }}
        {{ form_row(form.year) }}
        {{ form_row(form.url) }}

        <input type="submit" class="btn btn-success" value="Ajouter un TV Show" />

        {{ form_end(form) }}



    </div>

</div>

{% endblock %}
