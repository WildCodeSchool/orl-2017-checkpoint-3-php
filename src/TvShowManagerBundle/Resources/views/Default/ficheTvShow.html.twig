{% extends '::base.html.twig' %}

{% block headtitle %} Fiche TV Show {% endblock %}

{% block body %}

<div class="row">

    <div class="col-xs-12 col-md-offset-3 col-md-6">

        <h1 class="text-center">Fiche TV Show : {{ tvshow.name }}</h1>

        <ul>
            <li>{{ tvshow.type }}</li>
            <li>{{ tvshow.year }}</li>
            <li>{{ tvshow.url }}</li>
            <li><a href="{{ path('modificationTVS', { 'id': tvshow.id }) }}">modifier</a></li>
            <li><a href="{{ path('suppressionTVS', { 'id': tvshow.id }) }}">supprimer</a></li>
        </ul>

    </div>

</div>

{% endblock %}
